                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_margin"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_margin" />

        </RelativeLayout>

        <ImageView
